<div class="ui green inverted menu">
  <a class="ui active item" href=<%= root_path %> >TinyChat</a>
  <a class="ui item" href=<%= messages_path %> >Inbox</a>
  <a class="ui item">Friends</a>
  <a class="ui item" href=<%= users_path %> >Users</a>
  <div class="right menu">
    <% if current_user %>
      <%= link_to "Sign Out #{current_user}", sign_out_path, method: 'delete', class: 'ui item' %>
    <% else %>
      <%= link_to 'Sign Up', new_user_path, class: 'ui item' %>
      <%= link_to 'Sign In', new_session_path, class: 'ui item' %>
    <% end %>
  </div>
</div>