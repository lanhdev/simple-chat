<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div class="ui grid">
    <div class="eight wide column">
      <h1>Sign In</h1>
      <div class="ui form">
        <%= form_tag sessions_path, method: 'post' do %>
          <div class="field">
            <%= text_field_tag :email, params[:email] ,placeholder: 'Email' %>
          </div>
          <div class="field">
            <%= password_field_tag :password, nil, placeholder: 'Password' %>
          </div>
          <%= submit_tag 'Sign In', data: {disable_with: 'Signing In...'}, class: 'ui primary button' %>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>

<script>
  $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })
  ;
</script>
