      <form class="ui form">
        <div class="field">
          <label>Name</label>
          <input type="text" name="first-name" placeholder="Name">
        </div>
        <div class="field">
          <label>Email</label>
          <input type="text" name="last-name" placeholder="Email">
        </div>
        <%= link_to 'Sign Up', root_path, class: 'ui primary button' %>
      </form>
    </div>
  </div>
</body>
</html>